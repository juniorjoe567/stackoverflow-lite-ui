{
    "swagger": "2.0",
    "info": {
        "description": "Documentation for Stackoverflow-lite API",
        "version": "1.1.0",
        "title": "Stackoverflow Lite",
        "contact": { "email": "rolandmbasa@gmail.com" }
    },
    "host": "https://andela-stackoverflow.herokuapp.com/api",
    "basePath": "/v1.1",
    "tags": [
        {
            "name": "Questions",
            "description": "Adding and updating questions"
        },
        { "name": "Answers", "description": "Adding and updating answers" },
        {
            "name": "Authentication",
            "description": "Signing In And logging In"
        }
    ],
    "paths": {
        "/questions": {
            "post": {
                "tags": ["Questions"],
                "summary": "Creates a new question",
                "operationId": "addQuestion",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "Question that should be persisted",
                        "required": true,
                        "schema": { "$ref": "#/definitions/questions" }
                    }
                ],
                "responses": {
                    "405": { "description": "Invalid input" },
                    "200": { "description": "Question was added successfully" }
                },
                "security": [{ "petstore_auth": ["write:pets", "read:pets"] }]
            },
            "put": {
                "tags": ["Question"],
                "summary": "Update an existing pet",
                "description": "",
                "operationId": "updatePet",
                "consumes": ["application/json", "application/xml"],
                "produces": ["application/xml", "application/json"],
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description":
                            "Pet object that needs to be added to the store",
                        "required": true,
                        "schema": { "$ref": "#/definitions/Pet" }
                    }
                ],
                "responses": {
                    "400": { "description": "Invalid ID supplied" },
                    "404": { "description": "Pet not found" },
                    "405": { "description": "Validation exception" }
                },
                "security": [{ "petstore_auth": ["write:pets", "read:pets"] }]
            }
        },

        "ApiResponse": {
            "type": "object",
            "properties": {
                "code": { "type": "integer", "format": "int32" },
                "type": { "type": "string" },
                "message": { "type": "string" }
            }
        }
    },
    "externalDocs": {
        "description": "Find out more about Stackoverflow Lite",
        "url": "https://github.com/krmroland/stackoverflow-lite-ui"
    }
}
